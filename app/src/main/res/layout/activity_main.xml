<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_gl_surface_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sticker_gl_surface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_surface_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sticker_surface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_gl_surface_show" />

    <Button
        android:id="@+id/btn_texture_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sticker_texture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_surface_show" />

</androidx.constraintlayout.widget.ConstraintLayout>